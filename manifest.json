{
  "manifest_version": 2,

  "name": "Bronsonizer",
  "description": "Turns your page into something Charlie Bronson would be proud of",
  "version": "1.0",

  "browser_action": {
    "default_title": "Bronsonize this page",
    "default_icon": "cb.png"
  },
  "permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": ["cb.js"],
    "persistent": false
  }
}